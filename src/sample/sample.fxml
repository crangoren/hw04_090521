<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">



    <TextArea fx:id="mainTextArea" editable="false">
      <padding>
         <Insets bottom="100.0" />
      </padding>
    </TextArea>

    <TextField fx:id="sendField" prefHeight="27.0" prefWidth="478.0" promptText="Введите сообщение" GridPane.vgrow="ALWAYS">
      <GridPane.margin>
         <Insets left="10.0" right="10.0" top="450.0" />
      </GridPane.margin>

      <padding>
         <Insets left="10.0" />
      </padding>
    </TextField>

    <Button fx:id="btn" defaultButton="true" minHeight="25.0" onAction="#btnClicked" text="Отправить">
      <GridPane.margin>
         <Insets left="20.0" top="550.0" />
      </GridPane.margin>
    </Button>

</GridPane>
